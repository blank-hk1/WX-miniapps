/* pages/user/user.wxss */
.container{
  width: 100%;
  height: 100%;
  flex-direction: column;
}
.user-head{
  width: 100%;
  height: 35%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user-head image{
  width: 30%;
  height: 50%;
  border-radius: 100%;
}
.radio-group{
  width: 100%;
  display: flex;
  justify-content: center;
}
.radio{
  margin-right: 20px;
}
.baby-age-t{
  margin-top: 5%;
}
.baby-age-text{
  margin-left: 10%;
  font-weight: bolder;
}
.age-insert{
 width: 100%;
 display: flex;
 justify-content: center;
 margin-top: 5%;
}
.insert{
  width: 80%;
  border: 1px solid #ccc;
}
.baby-education-t{
  margin-top: 5%;
}
.baby-education-text{
  margin-left: 10%;
  font-weight: bolder;
}
.baby-education{
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: left;
  margin-top: 3%;
  justify-content: center;
}
.list-msg {
  width: 80%;
  padding: 0 20rpx;
  background-color: #fff;
  position: relative;
}
.list-msg .list-msg2 {
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ccc;
  padding: 0 10rpx;
}

.select_box {
  background-color: #eee;
  width: 93%;
  position: absolute;
  z-index: 1;
  overflow: hidden;
  animation: myfirst 0.5s;
}

@keyframes myfirst {
  from {
      height: 0rpx;
  }

  to {
      height: 180rpx;
  }
}

.select_one {
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
}
.last-button{
  display: flex;
  flex-direction: row;
}
.save{
  background-color: #5AAFF7;
  color: white;
  box-shadow:1px 1px 1px 1px #4B9CD7;
}
.cancel{
  box-shadow:1px 1px 1px 1px #E6E4E7;
}