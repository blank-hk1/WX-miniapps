/**index.wxss**/
.page{
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #eee;
  display: flex;
  flex-direction: column;  
  align-items: center;
}
.game {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
  height: 100%;
  margin-top: 20%;
}
.gameNavigation{
  display: flex;
  align-items: center;
  width: 80%;
  height: 100rpx;
  background-color: #4B9CD7;
  border-radius: 25px;
  margin-top: 30px;  
  font-weight: bolder;
  justify-content: center;
}
.gameName{
  width: 65%;
  color: white;
  display: flex;
  justify-content: center;
}
.progress {
  margin: 0 60rpx;
}
.cell {
  transition: 0.5s;
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  color: #4B9CD7;
  background-color: #fff;
  text-align: center;
  margin: 8rpx;
  border-radius: 10rpx;
  font-size: large;
  font-weight: bolder;
  border: 2px solid #000;
  box-shadow: 4px 4px 1px 1px  royalblue;
}

.cell:after {
  content: '';
  padding-top: 100%;
}

.cell_clicked{
  color: white;
  background-color: #4B9CD7;
  border: 2px solid #ccd6dd;
  box-shadow: 1px 1px 1px 1px  royalblue;
  transition: 0.5s;
}


.row {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.timer {
  display: flex;
  width: 35%;
  height: 72rpx;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 50rpx;
  color: aliceblue;
  border-radius: 8rpx;
}

.difficulty {
  display: flex;
  width: 120rpx;
  height: 72rpx;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 32rpx;
  color: white;
  background-color: var(--weui-BRAND);
  border-radius: 8rpx;
}


.leaderboardButton {
  width: 100%;
  display: flex;
  align-items: center;
  height: 50rpx;
  justify-content: center;
  font-weight: 700;
  font-size: 32rpx;
  color: white;
  padding: 10rpx 0;
  background-color: var(--weui-BRAND);
  border-radius: 8rpx;
}

.Back {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 9999;
}
.Settlement{
  width: 80%;
  height: 80%;
  background-color: white;
  border-radius: 30px;
}
.SettleNav{
  width: 100%;
  height: 10%;
  color: gold;
  display: flex;
  justify-content: center;
  margin-top: 5%;
}
.SettleScore{
  width: 100%;
  height: 7%;
  display: flex;
  justify-content: center;
  font-weight: bolder;
  margin-top: 3%;
}
.SettleScore1{
  width: 100%;
  height: 7%;
  color: gold;
  display: flex;
  justify-content: center;
  font-size: 20px;
  font-weight: bolder;
}
.robot1{
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: center;
}
.robot{
  width: 150px;
  height: 150px;
}
.Button{
  width: 100%;
  height: 15%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: white;
}
