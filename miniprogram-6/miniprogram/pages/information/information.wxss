/* miniprogram/pages/information/information.wxss */
page{
  width: 100%;
  height: 1500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-head{
  width: 80%;
  height: 15%;
  display: flex;
  flex-direction: column;
  padding-top: 50rpx;
  border-bottom: 1px solid #dddddd;
}
.header{
  font-size: 50rpx;
}
.Gender{
  width: 80%;
  height: 330rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.tips{
  height: 80rpx;
  color: #000;
  opacity: 0.6;
  display: flex;
  align-items: center;
}
.Select-button{
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.bt1{
  width: 200rpx;
  background: #fff;
  border: 2px solid #dddddd;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.bt1 image{
  width: 120rpx;
  height: 120rpx;
}
.bt2{
 /* width: 200rpx;
  background: #fff;*/
  border: 2px solid #54e346;
  /*border-radius: 20rpx;*/
}
.introduce{
  width: 80%;
  height: 480rpx;
  display: flex;
  flex-direction: row;
}
.in-head{
  width: 20%;
}
.in-head image{
  width: 120rpx;
  height: 120rpx;
}
.in-text{
  padding: 30rpx;
  border: 1px solid #7c9473;
  box-shadow: 0px 0px 1px 1px #7c9473;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.bt{
  background-color: #7579e7;
  color: white;
  margin-top: 30rpx;
}
.bottom{
  width: 80%;
  height: 150rpx;
}