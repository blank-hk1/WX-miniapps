.progress {
  position: relative;
  display: flex;
  align-items: center;
  width: 550rpx;
  height: 120rpx;
}

.progress:after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  height: 50rpx;
  border: 4rpx solid #0e49b5;
  border-radius: 30rpx;
  background-color: #ffffff;
}

.progress-content {
  height: 50rpx;
  border: 4rpx solid #0e49b5;
  border-radius: 30rpx;
  background-color: #98acf8;
  z-index: 10;
}

.progress-arrow {
  position: absolute;
  transform: translate(-40%);
  height: 60rpx;
  width: 60rpx;
  z-index: 20;
}

